<section class="relative bg-gray-900 text-white">
  <div class="relative w-full h-[500px] flex items-center justify-center overflow-hidden">
    <img
      src="{{ section.settings.hero_image | img_url: width: 1600 }}"
      alt="Hero Image"
      class="absolute inset-0 w-full h-full object-cover opacity-70"
    >
    <div class="relative text-center px-6">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">{{ section.settings.hero_title }}</h1>
      <p class="text-lg md:text-xl mb-6">{{ section.settings.hero_subtitle }}</p>
      {% if section.settings.hero_button_text != blank %}
        <a
          href="{{ section.settings.hero_button_link }}"
          class="bg-white text-gray-900 px-6 py-3 rounded-lg font-semibold hover:bg-gray-200"
        >
          {{ section.settings.hero_button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Title",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "hero_subtitle",
      "label": "Subtitle",
      "default": "Find your perfect products today"
    },
    {
      "type": "text",
      "id": "hero_button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "hero_button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
